// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Attachment {
  id       String  @unique
  width    Int?
  height   Int?
  imageUrl String?
  videoUrl String?

  i_createdAt DateTime @default(now())
  i_updatedAt DateTime @updatedAt
}

model Post {
  id          String  @unique
  description String?
  likes       Int?
  shares      Int?
  comments    Int?

  attachmentIds String[]

  authorId String?
  author   User?   @relation(fields: [authorId], references: [id])

  i_createdAt DateTime @default(now())
  i_updatedAt DateTime @updatedAt
}

model User {
  id        String  @unique
  username  String?
  handle    String?
  avatarUrl String?

  posts Post[]

  i_createdAt DateTime @default(now())
  i_updatedAt DateTime @updatedAt
}
